{
  "compilerOptions": {
    "target": "es5",                      
    "module": "commonjs",                 
    "declaration": true,                  
     "outDir": "./build",                 
    "rootDir": "./",                      
    "strict": true,                       
    "baseUrl": "./src",                   
    "paths": {
      "@custom-types/*": ["custom-types/*"],
      "@interfaces/*": ["interfaces/*"],
      "@method/*": ["method/*"],
      "@helpers/*": ["helpers/*"]
    },                           
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["node_modules", "build", "tests"]
}
